generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Exam {
  id              String   @id @default(cuid())
  title           String
  description     String?
  duration        Int      // duração em minutos
  totalQuestions  Int      @default(0) // total de questões disponíveis
  questionsToShow Int      @default(0) // quantas questões mostrar na prova
  randomizeQuestions Boolean @default(false) // se deve sortear questões aleatoriamente
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  questions   Question[]
  attempts    ExamAttempt[]
}

model Question {
  id          String   @id @default(cuid())
  examId      String
  question    String
  optionA     String
  optionB     String
  optionC     String
  optionD     String
  correctOption String  // 'A', 'B', 'C' ou 'D'
  order       Int      // ordem da questão na prova
  
  exam        Exam     @relation(fields: [examId], references: [id], onDelete: Cascade)
  answers     Answer[]
  
  @@index([examId])
}

model ExamAttempt {
  id          String   @id @default(cuid())
  examId      String
  studentName String
  startedAt   DateTime @default(now())
  completedAt DateTime?
  score       Float?   // pontuação final (0-100)
  
  exam        Exam     @relation(fields: [examId], references: [id], onDelete: Cascade)
  answers     Answer[]
  
  @@index([examId])
}

model Answer {
  id            String   @id @default(cuid())
  attemptId     String
  questionId    String
  selectedOption String?  // 'A', 'B', 'C', 'D' ou null se não respondida
  isCorrect     Boolean?
  
  attempt       ExamAttempt @relation(fields: [attemptId], references: [id], onDelete: Cascade)
  question      Question    @relation(fields: [questionId], references: [id], onDelete: Cascade)
  
  @@unique([attemptId, questionId])
  @@index([attemptId])
  @@index([questionId])
}